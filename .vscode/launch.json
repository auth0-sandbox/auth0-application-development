{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Current File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "cwd": "${fileDirname}/.."
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Nodemon Current File",
            "cwd": "${fileDirname}/..",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--watch",
                ".",
                "--watch",
                ".env"
            ],
            "program": "${file}",
            "restart": true,
            "console": "internalConsole"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Module 1: Launch ACME FM",
            "cwd": "${workspaceRoot}/Module 01/Acme",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--watch",
                ".",
                "--watch",
                ".env"
            ],
            "program": "src/app.js",
            "restart": true,
            "console": "internalConsole"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Module 2: Launch Backend API",
            "cwd": "${workspaceRoot}/Solutions/Module 02/API",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--watch",
                ".",
                "--watch",
                ".env"
            ],
            "program": "src/server.js",
            "restart": true,
            "console": "internalConsole"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Module 2: Launch ACME FM",
            "cwd": "${workspaceRoot}/Solutions/Module 02/Acme",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--watch",
                ".",
                "--watch",
                ".env"
            ],
            "program": "src/app.js",
            "restart": true,
            "console": "internalConsole"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Module 3: Launch Backend API",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/Module 03/API/src/server.js",
            "cwd": "${workspaceRoot}/Module 03/API"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Module 3: Launch BFF API",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/Module 03/API/src/server.js",
            "cwd": "${workspaceRoot}/Module 03/API"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Module 3: Launch ACME FM",
            "cwd": "${workspaceRoot}/Solutions/Module 03/Acme",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--watch",
                ".",
                "--watch",
                ".env"
            ],
            "program": "app.js",
            "restart": true,
            "console": "internalConsole"
        }
    ],
    "compounds": [
        {
            "name": "Module 2: Launch All",
            "configurations": [
                "Module 2: Launch Backend API",
                "Module 2: Launch ACME FM"
            ]
        },
        {
            "name": "Module 3: Launch All",
            "configurations": [
                "Module 3: Launch ACME FM",
                "Module 3: Launch Backend API",
                "Module 3: Launch BFF API"
            ]
        }
    ]
}